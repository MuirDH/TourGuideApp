<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="@dimen/home_image_padding" />

            <solid android:color="#ccc" />

        </shape>
    </item>

    <item android:bottom="@dimen/home_image_padding">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="@dimen/home_image_padding" />

            <solid android:color="@android:color/white" />

            <padding
                android:bottom="@dimen/card_padding"
                android:left="@dimen/card_padding"
                android:right="@dimen/card_padding"
                android:top="@dimen/card_padding" />
        </shape>
    </item>
</layer-list>